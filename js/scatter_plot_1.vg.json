{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total votes of Presidential winner and their Votes Percentage",
    "width": 800,
    "height": 600,
    "description": "A scatterplot showing total votes for presidential seat in US 2020 Election.",
    "data": {
        "url": "https://raw.githubusercontent.com/shanteru/fit3179-homework/master/data/president_winner.csv"
    },
    "params": [
        {
          "name": "Votes_Above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 4000000,
            "step": 100000,
            "name": "Minimum Votes in County: "
          }
        },
        {
          "name": "Candidate_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "Donald Trump",
              "Jo Jogernsen",
              "Joe Biden",
              "Write-ins"
            ],
            "labels":[
              "Show All",
              "Donald Trump",
              "Jo Jogernsen",
              "Joe Biden",
              "Write-ins"
            ],
            "name": "Candidate Selection: "
          }
        }
      ],
    "transform": [
        {"filter": "datum.total_votes_candidate > 0"},
        {"filter": "datum.total_votes_county > 0"},
        {
            "calculate": "datum.total_votes_candidate/datum.total_votes_county * 100",
            "as": "Votes percentage"
          }
    ],
    "mark": "point",
    "encoding": {
        "x": {
            "field": "total_votes_candidate",
            "type": "quantitative",
            "axis": {"tickCount": 7},
            "title":"Candidate's Total Votes",
            "scale": {
                "type": "log",
                "domain": [
                    1,
                    4000000
                ]
            }
        },
        "y": {
            "field": "total_votes_county",
            "type": "quantitative",
            "axis": {"tickCount": 7},
            "title":"County's Total Votes",
            "scale": {
                "type": "log",
                "domain": [
                    1,
                    4000000
                ]
            }
        },
        "tooltip": [
            {
                "field": "State",
                "type": "nominal"
            },
            {
                "field": "County",
                "type": "nominal"
            },
            {
                "field": "Candidate",
                "type": "nominal"
            },
            {
                "field": "total_votes_candidate",
                "type": "quantitative"
            }
        ]
    }
}