{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total votes of Presidential winner and their Votes Percentage",
    "width": 800,
    "height": 600,
    "description": "A scatterplot showing total votes for presidential seat in US 2020 Election.",
    "data": {
        "url": "https://raw.githubusercontent.com/shanteru/fit3179-homework/master/data/president_winner.csv"
    },
    "params": [
        {
          "name": "Votes_Above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 3200000,
            "step": 1000,
            "name": "Minimum Votes of Candidate in County: "
          }
        },
        {
          "name": "Candidate_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "Donald Trump",
              "Jo Jogernsen",
              "Joe Biden",
              "Write-ins"
            ],
            "labels":[
              "Show All",
              "Donald Trump",
              "Jo Jogernsen",
              "Joe Biden",
              "Write-ins"
            ],
            "name": "Candidate Selection: "
          }
        }
      ],
    "transform": [
        {"filter": "datum.total_votes_candidate > 0"},
        {"filter": "datum.total_votes_county > 0"},
        {"filter": "datum.total_votes_candidate > Votes_Above"},
      {"filter": "Candidate_selection == null || datum.Candidate == Candidate_selection"},
        {
            "calculate": "datum.total_votes_candidate/datum.total_votes_county * 100",
            "as": "Votes percentage"
          }
    ],
    

        "layer": [
            {"mark": "point",
                "encoding": {
                    "x": {
                        "field": "total_votes_candidate",
                        "type": "quantitative",
                        "axis": {"tickCount": 5},
                        "title":"Candidate's Total Votes",
                        "scale": {
                            "type": "log",
                            "domain": [
                                1,
                                10000000
                            ]
                        }
                    },
                    "y": {
                        "field": "total_votes_county",
                        "type": "quantitative",
                        "axis": {"tickCount": 5},
                        "title":"County's Total Votes",
                        "scale": {
                            "type": "log",
                            "domain": [
                                1,
                                10000000
                            ]
                        }
                    },
                    "color":{"field": "Candidate",
                    "type": "nominal"},"tooltip": [
                        {"field": "State", "type": "nominal"},
                        {"field": "County", "type": "nominal"},
                        {"field": "Candidate", "type": "nominal"},
                        {"field": "total_votes_candidate", "type": "quantitative", "format": ","},
                        {
                        "field": "Votes Percentage",
                        "type": "quantitative",
                        "format": ".2f"
                        }
                        ]}},

        {
            "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
            },
            "encoding": {
           
            "text": {"field": "Country", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
            "condition": {
            "test": "datum['County'] == 'Washington County' || datum['County'] == 'Cobb County'",
            "value": 1
            },
            "value": 0
            },
            "tooltip": [
            {"field": "State", "type": "nominal"},
            {"field": "County", "type": "nominal"},
            {"field": "Candidate", "type": "nominal"},
            {"field": "total_votes_candidate", "type": "quantitative", "format": ","},
            {
            "field": "Votes Percentage",
            "type": "quantitative",
            "format": ".2f"
            }
            ]
            }
            }
        ]
           
       

        
        

    
    
}