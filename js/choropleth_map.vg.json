{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Hotel reviews in United States",
    "width": 800,
    "height": 600,
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "https://raw.githubusercontent.com/shanteru/fit3179-homework/main/US_States_SOVI_Infographics.json",
      "format": {"type": "topojson", "feature": "US_States_SOVI_Infographics"}
    },
    "transform": [
      {
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/shanteru/fit3179-homework/main/data/1976-2020-president.csv"
          },
          "key": "state",
          "fields": ["totalvotes", "candidatevotes", "candidate"]
        }
      },
      {"calculate": "datum.totalvotes/datum.properties.POPULATION * 10000" , "as" : "totalvotes" }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "totalvotes",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.STATE_NAME", "type": "nominal", "title": "Country"},
        {"field": "totalvotes", "type": "quantitative", "title" : "Total Votes"},
        {"field": "candidate", "type": "nominal", "title" : "Candidate"},
        {"field": "candidatevotes", "type":"quantitative", "title" : "Candidate's votes"}
      ]
    }
  }